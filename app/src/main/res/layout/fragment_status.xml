<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/list_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/coba_click"
            android:layout_margin="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maintance Status"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_gravity="top"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/statusproses"
                android:layout_height="wrap_content"
                android:text="On Progress"
                android:textSize="12dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/green"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kerusakan_info"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/toko_komputer"
                android:layout_height="wrap_content"
                android:text="Bintang Komputer"
                android:maxLength="25"
                android:gravity="bottom"/>


        </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/gambar_status"
            android:background="@color/kuningKartu"
            android:src="@drawable/notifikasi_putih"
            android:layout_gravity="end"
            />
    </android.support.v7.widget.CardView>

</LinearLayout>
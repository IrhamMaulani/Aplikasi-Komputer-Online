<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >


    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/list_service"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/coba_click"
                android:layout_margin="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_for_nama"
                    android:text="Nama Service : Install Ulang"
                    android:textStyle="bold"
                    android:layout_gravity="top" />

                <TextView
                    android:id="@+id/txt_for_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga : Rp.50.000"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="top" />

                <TextView
                    android:id="@+id/btn_for_submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Pesan Service"
                    style="@android:style/Widget.DeviceDefault.Button"
                    android:textAllCaps="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="top"
                     />




            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
